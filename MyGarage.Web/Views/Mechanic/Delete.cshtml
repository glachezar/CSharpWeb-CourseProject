@model MechanicViewModel
@{
    ViewData["Title"] = "Delete Mechanic";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<form method="post" asp-action="Delete">
    <div class="row">
        <div class="col-md-8">
            <div class="form-group mb-4">
                <label asp-for="Name" class="control-label mb-1"></label>
                <input asp-for="Name" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group mb-4">
                <label asp-for="Surname" class="control-label mb-1"></label>
                <input asp-for="Surname" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group mb-4">
                <label asp-for="PhoneNumber" class="control-label mb-1"></label>
                <input asp-for="PhoneNumber" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    </div>
</form>