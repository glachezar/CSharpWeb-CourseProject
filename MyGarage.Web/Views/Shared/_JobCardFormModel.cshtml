@model CreateJobCardViewModel

@{
    var parts = Model.Parts.ToList();
    var jobs = Model.Jobs.ToList();
    var mechanics = Model.Mechanics.ToList();
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post" asp-controller="JobCard" asp-action="Create">
            <div class="form-group">
                <label asp-for="Mileage"></label>
                <input asp-for="Mileage" class="form-control" placeholder="Vehicle Mileage...">
                <span asp-validation-for="Mileage" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MechanicId"></label>
                <select asp-for="MechanicId" class="form-control">
                    @foreach (var mechanic in mechanics)
                    {
                        <option value="@mechanic.Id">@mechanic.Name @mechanic.LastName</option>
                    }
                </select>
                <span asp-validation-for="MechanicId" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PartId"></label>
                <select asp-for="PartId" class="form-control">
                    @foreach (var part in parts)
                    {
                        <option value="@part.Id">@part.PartName</option>
                    }
                </select>
                <span asp-validation-for="PartId" class="small text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="JobId"></label>
                <select asp-for="JobId" class="form-control">
                    @foreach (var job in jobs)
                    {
                        <option value="@job.Id">@job.JobName</option>
                    }
                </select>
                <span asp-validation-for="JobId" class="small text-danger"></span>
            </div>

            <div class="text-center">
                <input method="post" class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>
