@model IEnumerable<JobCardViewModel>

@{
    ViewData["Title"] = "All Job Cards!";
    ViewBag.Currency = "$";
    var parts = Model.ToList();
    var count = 1;
}

<div class="text-centre mb-5" align="center">
    <h2 class="display-4 text-centre">@ViewData["Title"]</h2>
</div>
<hr />

<div class="">
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Date of Creation</th>
            <th scope="col">Vehicle Make</th>
            <th scope="col">Vehicle Model</th>
            <th scope="col">Vehicle VIN</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var jobCard in Model)
        {

            <tr>
                <th scope="row">@count</th>
                    <td>@jobCard.CreatedOn</td>
                    <td>@jobCard.Vehicle.Make</td>
                    <td>@jobCard.Vehicle.Model</td>
                    <td>@jobCard.Vehicle.Vin</td>

@*                <td><a type="button" class="btn btn-primary" asp-area="" asp-controller="Part" asp-action="Details" asp-route-id="@job.Id">View Details</a></td>
                <td><a type="button" class="btn btn-warning" asp-area="" asp-controller="Part" asp-action="Edit" asp-route-id="@job.Id">Edit</a></td>
                <td><a type="button" class="btn btn-danger" asp-area="" asp-controller="Part" asp-action="Delete" asp-route-id="@job.Id">Delete</a></td>*@
            </tr>
            count++;
        }
        </tbody>
    </table>
</div>