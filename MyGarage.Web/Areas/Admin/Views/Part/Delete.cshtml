@model PartsViewModel
@{
    ViewData["Title"] = "Delete Part";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<form method="post" asp-action="Delete" asp-area="Admin">
    <div class="row">
        <div class="col-md-8">
            <div class="form-group mb-4">
                <label asp-for="PartName" class="control-label mb-1"></label>
                <input asp-for="PartName" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group mb-4">
                <label asp-for="PartNumber" class="control-label mb-1"></label>
                <input asp-for="PartNumber" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group mb-4">
                <label asp-for="Price" class="control-label mb-1"></label>
                <input asp-for="Price" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    </div>
</form>
